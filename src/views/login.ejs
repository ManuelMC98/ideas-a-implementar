<%- include('partials/head', { styles: ['stylesLogin'] }) %>

<body>
    <div class="logo-btn">
        <img src="/images/Logo-verde.png" alt="Logo">
    </div>
    <div class="wrapper">
        <form action="/users/login" method="POST">
            <h1>Iniciar Sesión</h1>
            <div class="input-box">
                <input type="text" name="user1" placeholder="Usuario" required>
                <i class='bx bx-user' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="password" name="password" placeholder="Contraseña" required>
                <i class='bx bx-lock' style='color:#435334'></i>
            </div>
            <div class="remember-forgot">
                <label>
                    <input type="checkbox" name="recordame">
                    Recordar datos
                </label>
                <a href="#"> ¿Olvidó su contraseña?</a>
            </div>
            <button type="submit" class="btn">Iniciar sesión</button>
            <div class="register-link">
                <p>¿No tienes una cuenta? <a href="/users/register">Registrarse</a></p>
            </div>
        </form>
    </div>
</body>

</html>
